{% extends 'base.html.twig' %}

{% block title %}Ajouter Catégorie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Créer une nouvelle catégorie</h1>
        
        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-success mt-3">Créer</button>
        {{ form_end(form) }}
        
        <a href="{{ path('category_list') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
    </div>
{% endblock %}