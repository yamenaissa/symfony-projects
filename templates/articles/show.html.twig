{% extends 'base.html.twig' %}

{% block title %}Détails de l'article{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Détails de l'article</h1>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">{{ article.nom }}</h5>
            <p class="card-text">Prix: {{ article.prix }} €</p>
            <p class="card-text">Catégorie: {{ article.category.titre }}</p>
            
            <div class="mt-3">
                <a href="{{ path('article_show') }}" class="btn btn-secondary">Retour à la liste</a>
                <a href="{{ path('edit_article', {'id': article.id}) }}" class="btn btn-primary">Modifier</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}